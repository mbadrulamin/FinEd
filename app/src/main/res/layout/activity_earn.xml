<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.scwang.wave.MultiWaveHeader
        android:id="@+id/waveHeader"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:scaleY="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:mwhCloseColor="@color/red"
        app:mwhColorAlpha="0.5"
        app:mwhGradientAngle="90"
        app:mwhProgress="1"
        app:mwhStartColor="@color/blue"
        app:mwhVelocity="5"
        app:mwhWaveHeight="25dp"
        app:mwhWaves="MultiWave">

    </com.scwang.wave.MultiWaveHeader>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Please select \nyour desired job"
        android:textColor="@color/white"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/waveHeader"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/waveHeader"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="450dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/waveHeader">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <androidx.gridlayout.widget.GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:alignmentMode="alignMargins"
                app:columnCount="2"
                app:columnOrderPreserved="false"
                app:rowCount="4">

                <androidx.cardview.widget.CardView
                    android:id="@+id/earnGrabDriverCard"
                    android:layout_width="150dp"
                    android:layout_height="160dp"
                    android:layout_margin="20dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="20dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="16dp">

                        <com.sdsmdg.harjot.longshadows.LongShadowsWrapper
                            android:id="@+id/earnGrabDriver"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_centerHorizontal="true"
                            android:foregroundGravity="clip_horizontal">


                            <com.sdsmdg.harjot.longshadows.LongShadowsImageView

                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_centerInParent="true"
                                android:src="@raw/grab_car_driver"
                                app:shadow_angle="45"
                                app:shadow_length="50" />

                        </com.sdsmdg.harjot.longshadows.LongShadowsWrapper>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/earnGrabDriver"
                            android:layout_alignStart="@+id/earnGrabDriver"
                            android:layout_alignEnd="@+id/earnGrabDriver"
                            android:layout_marginStart="-9dp"
                            android:layout_marginEnd="-9dp"
                            android:gravity="center_horizontal"
                            android:text="Grab Car Driver"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/grabRiderCard"
                    android:layout_width="150dp"
                    android:layout_height="160dp"
                    android:layout_margin="20dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="20dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:padding="16dp">

                        <com.sdsmdg.harjot.longshadows.LongShadowsWrapper
                            android:id="@+id/grabRider"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_centerHorizontal="true"
                            android:foregroundGravity="clip_horizontal">


                            <com.sdsmdg.harjot.longshadows.LongShadowsImageView

                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_centerInParent="true"
                                android:src="@raw/grab_rider"
                                app:shadow_angle="45"
                                app:shadow_length="50" />

                        </com.sdsmdg.harjot.longshadows.LongShadowsWrapper>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/grabRider"
                            android:layout_alignStart="@+id/grabRider"
                            android:layout_alignEnd="@+id/grabRider"
                            android:layout_marginStart="0dp"
                            android:layout_marginEnd="0dp"
                            android:gravity="center_horizontal"
                            android:text="Grab Rider"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/onlineBisCard"
                    android:layout_width="150dp"
                    android:layout_height="160dp"
                    android:layout_margin="20dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="20dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:padding="16dp">

                        <com.sdsmdg.harjot.longshadows.LongShadowsWrapper
                            android:id="@+id/onlineBis"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_centerHorizontal="true"
                            android:foregroundGravity="clip_horizontal">


                            <com.sdsmdg.harjot.longshadows.LongShadowsImageView

                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_centerInParent="true"
                                android:src="@raw/online_business_2"
                                app:shadow_angle="45"
                                app:shadow_length="50" />

                        </com.sdsmdg.harjot.longshadows.LongShadowsWrapper>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/onlineBis"
                            android:layout_marginTop="2dp"
                            android:text="Online Business"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/partTimeCard"
                    android:layout_width="150dp"
                    android:layout_height="160dp"
                    android:layout_margin="20dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="20dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:padding="16dp">

                        <com.sdsmdg.harjot.longshadows.LongShadowsWrapper
                            android:id="@+id/partTime"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_centerHorizontal="true"
                            android:foregroundGravity="clip_horizontal">


                            <com.sdsmdg.harjot.longshadows.LongShadowsImageView

                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_centerInParent="true"
                                android:src="@raw/part_time_job"
                                app:shadow_angle="45"
                                app:shadow_length="50" />

                        </com.sdsmdg.harjot.longshadows.LongShadowsWrapper>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/partTime"
                            android:layout_alignStart="@+id/partTime"
                            android:layout_alignEnd="@+id/partTime"
                            android:layout_marginStart="0dp"
                            android:layout_marginEnd="0dp"
                            android:gravity="center_horizontal"
                            android:text="Part Time"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/foodPandaCard"
                    android:layout_width="150dp"
                    android:layout_height="160dp"
                    android:layout_margin="20dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="20dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:padding="16dp">

                        <com.sdsmdg.harjot.longshadows.LongShadowsWrapper
                            android:id="@+id/foodPanda"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_centerHorizontal="true"
                            android:foregroundGravity="clip_horizontal">


                            <com.sdsmdg.harjot.longshadows.LongShadowsImageView

                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_centerInParent="true"
                                android:src="@raw/rider_foodpanda"
                                app:shadow_angle="45"
                                app:shadow_length="50" />

                        </com.sdsmdg.harjot.longshadows.LongShadowsWrapper>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/foodPanda"
                            android:layout_alignStart="@+id/foodPanda"
                            android:layout_alignEnd="@+id/foodPanda"
                            android:layout_marginStart="0dp"
                            android:layout_marginEnd="0dp"
                            android:gravity="center_horizontal"
                            android:text="Foodpanda"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/scholarshipCard"
                    android:layout_width="150dp"
                    android:layout_height="160dp"
                    android:layout_margin="20dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="20dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:padding="16dp">

                        <com.sdsmdg.harjot.longshadows.LongShadowsWrapper
                            android:id="@+id/scholarship"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_centerHorizontal="true"
                            android:foregroundGravity="clip_horizontal">


                            <com.sdsmdg.harjot.longshadows.LongShadowsImageView

                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_centerInParent="true"
                                android:src="@raw/scholarship"
                                app:shadow_angle="45"
                                app:shadow_length="50" />

                        </com.sdsmdg.harjot.longshadows.LongShadowsWrapper>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/scholarship"
                            android:layout_alignStart="@+id/scholarship"
                            android:layout_alignEnd="@+id/scholarship"
                            android:layout_marginStart="0dp"
                            android:layout_marginEnd="0dp"
                            android:gravity="center_horizontal"
                            android:text="Scholarship"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/waiterCard"
                    android:layout_width="150dp"
                    android:layout_height="160dp"
                    android:layout_margin="20dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="20dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:padding="16dp">

                        <com.sdsmdg.harjot.longshadows.LongShadowsWrapper
                            android:id="@+id/waiter"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_centerHorizontal="true"
                            android:foregroundGravity="clip_horizontal">


                            <com.sdsmdg.harjot.longshadows.LongShadowsImageView

                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_centerInParent="true"
                                android:src="@raw/waiter"
                                app:shadow_angle="45"
                                app:shadow_length="50" />

                        </com.sdsmdg.harjot.longshadows.LongShadowsWrapper>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/waiter"
                            android:layout_alignStart="@+id/waiter"
                            android:layout_alignEnd="@+id/waiter"
                            android:layout_marginStart="0dp"
                            android:layout_marginEnd="0dp"
                            android:gravity="center_horizontal"
                            android:text="Waiter"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>


            </androidx.gridlayout.widget.GridLayout>


        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>